<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondo_editar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/borde_layout"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dueño:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:enabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mascota:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="5">  <!-- CORREGIDO -->

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/subir"
                    android:textColor="@android:color/white"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />  <!-- YA ESTÁ CORRECTO -->

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/salir"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>
