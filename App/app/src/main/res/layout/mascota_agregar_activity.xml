<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondo_editar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/borde_layout"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Especie:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/especie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Raza:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/raza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Edad:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edad"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Peso:"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/peso"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnAgregarMascota"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/subir"
                    android:layout_gravity="start"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/salir"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
